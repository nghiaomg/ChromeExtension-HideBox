{
  "manifest_version": 3,
  "name": "HideBox - Ẩn phần tử theo Domain",
  "version": "1.0.0",
  "description": "Cho phép ẩn các phần tử DOM không mong muốn và lưu cấu hình theo domain",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "HideBox",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/selector-generator.js", "content/element-hider.js", "content/content-script.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_end"
    }
  ],
  
  "commands": {
    "toggle-selection-mode": {
      "suggested_key": {
        "default": "Alt+X",
        "windows": "Alt+X",
        "mac": "Alt+X"
      },
      "description": "Bật/tắt chế độ chọn phần tử"
    },
    "snooze-domain": {
      "suggested_key": {
        "default": "Alt+Z",
        "windows": "Alt+Z",
        "mac": "Alt+Z"
      },
      "description": "Tạm thời vô hiệu hóa cho domain hiện tại"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
